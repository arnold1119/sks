#include <vcl.h>
#pragma hdrstop
#include "Plan.h"
#include "MyDraw.h"
class TUser : public TPlan {
    public:
        void Init(void);
        void Run(void);
        void Reset(void);

};

MyDraw myDraw;

void TUser::Init(void) {
    Clear(Klar);
    int ret[2];
    
    myDraw.myDrawRoad(5, 2, ret, 1);

}

void TUser::Run(void) {

}

void TUser::Reset(void) {

}
void MyDraw::myDrawRoad(int iAllLanes, int iLeft, int *iStore, int iHorizontale = 1) {
        
        int iLans = iAllLanes + 1;
        if(iHorizontale == 1) {
            SetPen(Weiss);
            SetBrush(Hellgrau);
            Rectangle(0, 100, GetMaxW(), iLans * MYLANEWIDTH);
        }
}

//====================================================================
#pragma argsused
int main(int argc, char* argv[]){ TUser a; a.Execute(); return 0; }
